<%- include('partials/header') %>
<a href="/" class="home-button">
  <i class="fas fa-arrow-left"></i>
</a>
<div class="container loginsize mt-5" style="display: flex; flex-direction: column; align-items: center; justify-content: center; width: 100%;" >

  <h1>Register</h1>

  <div class="row" style="display: flex; justify-content: center;">
    <div>
      <div class="card">
        <div class="card-body" style="padding: 30px; width: 400px;">
          <form action="/register" method="POST">
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" placeholder="Password" name="password" required>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
            <Span style="margin:0 10px;"> Or </Span>
            <a href="/login" style="color: black; font-weight: 700; text-decoration: underline;">Login</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/header') %>
